{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "author": {
    "name": "Thiago Paiva",
    "email": "thiago.rodriguesdepaiva@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "db:migrate": "yarn prisma migrate dev --preview-feature",
    "fix": "run-s \"fix:* {@}\" --",
    "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "format": "yarn fix:format src/**/*.{js,ts,md,json}",
    "lint": "yarn fix:lint src/**/*.{js,ts,md,json}",
    "test": "yarn jest",
    "prepare": "husky install",
    "prebuild": "rm -Rf ./dist",
    "build": "babel src --extensions \".js\" --ignore \"*.spec.js, *.teste.js\" --out-dir dist --copy-files",
    "predev": "node docs/generate.js",
    "dev": "nodemon --exec babel-node -- -r dotenv-safe/config src/index.js"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./src/**.{js,ts,md,json}": [
      "yarn fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/node": "^7.20.7",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prisma-erd-generator": "^1.2.5",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "dotenv-safe": "^8.2.0",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "prisma": "^4.11.0",
    "ramda": "^0.28.0",
    "swagger-injector": "^4.0.1"
  }
}
