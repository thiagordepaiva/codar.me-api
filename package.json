{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "author": {
    "name": "Thiago Paiva",
    "email": "thiago.rodriguesdepaiva@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "fix": "run-s \"fix:* {@}\" --",
    "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "format": "yarn fix:format 'src/**/*.(js|Zts|md|json)'",
    "lint": "yarn fix:lint src/**/*.{js,ts,md,json}",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./src/**.{js,ts,md,json}": [
      "yarn fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5"
  }
}
